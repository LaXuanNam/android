<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mh2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Baithi1"
        android:gravity=""
        android:background="#2841CA"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="DANG KY KY TUC XA"
        android:textSize="30sp"
        android:gravity="center" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="LOAI PHONG NGU"
        android:gravity="center"
        android:textSize="22sp" />
   <RadioGroup
       android:id="@+id/radPN"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">
       <RadioButton
           android:id="@+id/rd1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="10dp"
           android:text="Phong rieng 1 giuong"
           android:textSize="20sp" />
       <RadioButton
           android:id="@+id/rd2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="10dp"
           android:text="Phong ghep 2 giuong"
           android:textSize="20sp" />
       <RadioButton
           android:id="@+id/rd3"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="10dp"
           android:text="Phong ghep 3 giuong"
           android:textSize="20sp" />
       <RadioButton
           android:id="@+id/rd4"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="10dp"
           android:text="Phong ghep 4 giuong"
           android:textSize="20sp" />
   </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="DICH VU"
        android:gravity="center"
        android:textSize="22sp" />
    <CheckBox
        android:id="@+id/cbxe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Bãi đỗ xe"
        android:textSize="20sp"/>
    <CheckBox
        android:id="@+id/cbwifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="wifi"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <Button
            android:id="@+id/btnchon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHOOSE"
            android:layout_margin="10dp"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/btnexit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EXIT"
            android:layout_margin="10dp"
            android:layout_gravity="center"/>
        <Button
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEXT"
            android:layout_margin="10dp"
            android:layout_gravity="center"/>
    </LinearLayout>

</LinearLayout>